
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link href="~/css/Client.css" rel="stylesheet" />




    <script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <title>Chat</title>
</head>
<body>
    <!--Login Page-->
    <div style="width: 25%; height: 250px; margin-top: 10%; margin-left: 35%;  background-color: pink;" id="loginDiv">
        <div style="margin-left: 25%;">
            <input style="margin-top:20%;" id="loginName" placeholder="nickname" />
            <br />
            <br />
            <button style="margin-left:20%; background-color:lawngreen" onclick="Login();">Bağlan</button>
            <br />
            <br />
            <br />
            <label id="loginLabel"></label>
        </div>
    </div>

    <!--Main Page-->
    <div id="pageDiv" style="display:none">
        <div style="background-color:slategrey; color:white; width:100%; height:20px;">
            <label id="nickname" style="margin-left:50%;"></label>
        </div>
        <button onclick="Exit();" style="background-color:red;  float:right;">Çıkış</button>



        <br />
        <br />
        <div class="row">
            <div class="col-2">
                <div class="list-group" id="list-tab" role="tablist">
                </div>
            </div>
        </div>

        <br />
        <br />
        <br />


        <input type="text" id="txtMessage"> <button>Gönder</button>
        <ul id="messages">
        </ul>
        <div style="color:darkorange;background-color: dimgrey; width: 250px; display: none;">
        </div>
    </div>













    <script src="~/js/Client.js"></script>
</body>
</html>
